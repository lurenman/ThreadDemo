<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看Log"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/bt_newFixedThreadPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="newFixedThreadPool"
            />
        <Button
            android:id="@+id/bt_newSingleThreadExecutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="newSingleThreadExecutor"
            android:layout_marginTop="30dp"
            />
        <Button
            android:id="@+id/bt_newCachedThreadPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="newCachedThreadPool"
            android:layout_marginTop="30dp"
            />
        <Button
            android:id="@+id/bt_newScheduledThreadPool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="newScheduledThreadPool"
            android:layout_marginTop="30dp"
            />
        <Button
            android:id="@+id/bt_newSingleThreadScheduledExecutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="newSingleThreadScheduledExecutor"
            android:layout_marginTop="30dp"
            />
        <Button
            android:id="@+id/bt_Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="停止线程池测试"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>
</LinearLayout>