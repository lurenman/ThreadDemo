<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.lurenman.threaddemo.MainActivity">
    <TextView
        android:id="@+id/tv_ScheduledThreadPool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScheduledThreadPool"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/tv_CallableTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CallableTest"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_AsyncTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AsyncTask串行并发"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thread测试"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        />
</LinearLayout>
